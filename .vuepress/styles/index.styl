body
    background-color #FFF
    font-family: 'Montserrat', BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif;

#app
    .navbar
        border-bottom 0
        background-color #1A202C
        .site-name
            color #E2E8F0
        .links
            background-color #1A202C
            a
                color #E2E8F0
        .nav-links
            .nav-item > a:not(.external):hover,
            .nav-item > a:not(.external).router-link-active
                color #E2E8F0
                border-bottom 2px solid #718096
            .nav-item .nav-link.external
                border-radius 3px
                padding .25rem .5rem
                &:hover
                    background #4A5568
            .nav-item:nth-child(3)
                .nav-link.external
                    color #FFF
                    background #DD6B20
                    &:hover
                        background #C05621
            .repo-link
                display none
    .suggestions
        border-color #1A202C
        background-color #2d3748
        li:hover
            color #fff
            background-color #1A202C

    .sidebar
        border-right none
        background-image linear-gradient(120deg,#2d3748,#2d3748,#4a5568)
        .repo-link
            display none
        .sidebar-group a.sidebar-link
            color #A0AEC0
            &.active
                color #FFF
                font-weight bold
                border-left 0
        > .sidebar-links > li:not(:first-child)
            margin-top 0

    .sidebar-group-items
        background-color #1A202C
        border-left 4px solid #C05621
    .sidebar-group:not(.collapsable) .sidebar-heading,
    .sidebar-heading
        font-weight 400
        color #E2E8F0
        display flex
        align-items center
        justify-conten center
        border-left 0
        padding 0.5rem 1rem
        &:hover, &:active, &.open
            color #F7FAFC
            background-color #C05621
        &.open
            border-left 4px solid #C05621
            background-color #1A202C
            .sidebar-links
                background-color #2d3748

    .sidebar-heading .arrow
        margin-left auto
        margin-right 0.5rem
    .sidebar-heading .arrow.right
        border-left 6px solid #A0AEC0

    .sidebar-heading .arrow.down
        border-top 6px solid #A0AEC0


.icon.outbound
    display none

p
    text-align justify
    img
        border-radius 5px
        filter drop-shadow(-1px -2px 10px #EDF2F7)

h1,
h2,
h3,
h4,
h5,
h6
    line-height 1.5
h1
    font-weight 300
h3
    color #000
    font-weight 300

@media (max-width: 767px)
    h2
        font-weight 300
    h3
        color #2D3748
        font-size: 1.1rem;


h1 .header-anchor,
h2 .header-anchor,
h3 .header-anchor,
h4 .header-anchor,
h5 .header-anchor,
h6 .header-anchor
    opacity 1
    color #EDF2F7
    &:hover
        font-weight 400
        text-decoration none !important
// .content a
