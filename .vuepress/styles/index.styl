.content:not(.custom)
    padding 4rem 2.5rem 1rem

    div[class*="language-"]
        border-radius 3px

.table-of-contents
    ul
        list-style none
        list-style-position outside

    > ul
        padding-left 0

        > li
            padding 0
            margin 0

    a:hover
        opacity 0.8
        text-decoration none !important

    a:active
        opacity 1
        text-decoration none !important

    a:before
        content '# '
        color #bbb
        margin-left -15px
        margin-right 3px

.sw-update-popup
    top 4.5rem
    bottom auto
    border-radius 5px
    border 1px solid #E2E8F0
    button
        border 0
        color #fff
        float right
        font-size .9rem
        margin-top 1rem
        border-radius 3px
        padding .25em 2em
        padding .5rem 1rem
        background #4A5568
        &:hover
            background #2D3748

.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #c6f6d5
    border-color #42b983
    color #22543D
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
    a
      color #4A5568
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
    a
      color #4A5568

